<?xml version="1.0" encoding="utf-8"?>



<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.RestaurantDetailsFragment"
       >

    <TextView
        android:id="@+id/details_restaurant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_rating_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/star_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/photos_pager"
        app:layout_constraintBottom_toTopOf="@id/details_restaurant_vegeterian"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/details_restaurant_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/iv_rating_icon"
        app:layout_constraintTop_toBottomOf="@id/photos_pager"
        />

        <ImageView
            android:id="@+id/iv_vegeterian_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/vegeterian_24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/details_restaurant_rating"
            app:layout_constraintBottom_toTopOf="@id/details_restaurant_address"
            android:layout_marginTop="8dp"
            />


        <TextView
            android:id="@+id/details_restaurant_vegeterian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_rating_icon"
            app:layout_constraintTop_toBottomOf="@id/details_restaurant_rating"
            />



    <ImageView
        android:id="@+id/iv_location_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_location_on_24"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_vegeterian"
        android:layout_marginTop="8dp"
        />


    <TextView
        android:id="@+id/details_restaurant_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_location_icon"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_vegeterian"
        android:layout_marginTop="8dp"

        />

    <ImageView
        android:id="@+id/iv_call_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/call_24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_address"
        android:layout_marginTop="8dp"
        />


    <TextView
        android:id="@+id/details_restaurant_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_call_icon"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_address"
        android:layout_marginTop="8dp"

        />

    <ImageView
        android:id="@+id/iv_web_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/public_24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_phone_number"
        android:layout_marginTop="8dp"
        />


    <TextView
        android:id="@+id/details_restaurant_web"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_web_icon"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_phone_number"
        android:layout_marginTop="8dp"

        />

    <ImageView
        android:id="@+id/iv_schedule_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/schedule_24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_web"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/details_restaurant_open"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_schedule_icon"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_web"
        android:layout_marginTop="8dp"

        />


    <TextView
        android:id="@+id/details_restaurant_schedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_schedule_icon"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_open"
        android:layout_marginTop="8dp"

        />



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/photos_pager"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_name"
        app:layout_constraintBottom_toTopOf="@id/details_restaurant_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <ImageView
            android:id="@+id/iv_arrow_left"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/arrow_back_24dp"
            android:visibility="visible"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/photos_pager"
            app:layout_constraintBottom_toBottomOf="@id/photos_pager"
            />

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="visible"
        android:layout_marginEnd="16dp"
        android:src="@drawable/arrow_forward_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/photos_pager"
        app:layout_constraintBottom_toBottomOf="@id/photos_pager"
       />


    <Button
        android:id="@+id/booking_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="@string/reserve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_schedule"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/orange_Corail"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>





